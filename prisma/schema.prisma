generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  movie
  tv
}

enum WatchStatus {
  want
  watching
  finished
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  passwordHash String
  topVibes  String[] @default([])
  ratings   Rating[]
  viewing   ViewingStatus[]
  following Friendship[] @relation("following")
  followers Friendship[] @relation("followers")
  sessions  Session[]
  alignments AlignmentSnapshot[] @relation("alignmentUser")
  alignmentFor AlignmentSnapshot[] @relation("alignmentFriend")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  refreshToken String   @unique
  userAgent    String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

model Title {
  id          String   @id @default(cuid())
  tmdbId      Int?     @unique
  mediaType   MediaType
  name        String
  overview    String?
  posterUrl   String?
  backdropUrl String?
  releaseDate DateTime?
  streamingOn String[] @default([])
  genres      String[] @default([])
  collections String[] @default([])
  averageScore Float   @default(0)
  ratings     Rating[]
  statuses    ViewingStatus[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VibeTag {
  id     String @id @default(cuid())
  label  String @unique
  ratings RatingVibe[]
}

model Rating {
  id        String   @id @default(cuid())
  userId    String
  titleId   String
  score     Int
  status    WatchStatus
  reaction  String?
  spoiler   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  title     Title    @relation(fields: [titleId], references: [id])
  vibes     RatingVibe[]
  journal   JournalEntry?

  @@unique([userId, titleId])
}

model RatingVibe {
  ratingId  String
  vibeTagId String
  rating    Rating @relation(fields: [ratingId], references: [id])
  vibe      VibeTag @relation(fields: [vibeTagId], references: [id])
  assignedAt DateTime @default(now())

  @@id([ratingId, vibeTagId])
}

model JournalEntry {
  id              String   @id @default(cuid())
  ratingId        String   @unique
  rating          Rating   @relation(fields: [ratingId], references: [id])
  favoriteCharacter String?
  wouldRewatch    Boolean?
  threeWords      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Friendship {
  followerId String
  followeeId String
  follower   User   @relation("following", fields: [followerId], references: [id])
  followee   User   @relation("followers", fields: [followeeId], references: [id])
  createdAt  DateTime @default(now())

  @@id([followerId, followeeId])
}

model AlignmentSnapshot {
  id            String   @id @default(cuid())
  userId        String
  friendId      String
  agreement     Float
  sharedTitles  Int
  calculatedAt  DateTime @default(now())
  user          User     @relation("alignmentUser", fields: [userId], references: [id])
  friend        User     @relation("alignmentFriend", fields: [friendId], references: [id])

  @@unique([userId, friendId])
}

model ViewingStatus {
  userId   String
  titleId  String
  status   WatchStatus
  updatedAt DateTime @default(now())
  user     User   @relation(fields: [userId], references: [id])
  title    Title  @relation(fields: [titleId], references: [id])

  @@id([userId, titleId])
}
